<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="net.anvisys.xpen.AddActivityActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/activityRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/appBar"
        android:orientation="horizontal"
        android:background="@color/tab"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
       >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/selectProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Project"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            />
            <TextView
                android:id="@+id/txtClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:text="Client"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <net.anvisys.xpen.Object.OvalImageView
        android:id="@+id/imgManager"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_default"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/txtApproverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:text="Manager"
        android:layout_gravity="center"
        />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/txtActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activityRow1"
        app:layout_constraintStart_toStartOf="@id/activityRow1"
        android:layout_margin="15dp"
        android:textSize="15sp"
        android:hint="Activity Name"
        />
    <EditText
        android:id="@+id/txtActivityDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtActivityName"
        app:layout_constraintStart_toStartOf="@id/txtActivityName"
        android:layout_margin="15dp"
        android:hint="Description"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/txtEcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtActivityDescription"
        app:layout_constraintStart_toStartOf="@id/txtActivityDescription"
        android:inputType="number"
        android:layout_margin="15dp"
        android:hint="Estimated Cost"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/txtAdvance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtEcost"
        app:layout_constraintStart_toStartOf="@id/txtEcost"
        android:layout_margin="15dp"
        android:inputType="number"
        android:hint="Advance"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/btnAddActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtAdvance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="AddActivity"
        android:layout_marginTop="20dp"
        android:text="ADD"
        android:textColor="@color/white"
        android:background="@drawable/round"
        android:backgroundTint="@color/blue"
        android:layout_margin="15dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateTint="@color/blue"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        />

</android.support.constraint.ConstraintLayout>