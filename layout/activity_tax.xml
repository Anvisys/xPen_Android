<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.anvisys.xpen.TaxActivity"
    android:background="@drawable/bg_inner"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/tdsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="56dp"
        android:background="#ffffff"
        android:elevation="5dp"
        >
        <LinearLayout
            android:id="@+id/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:padding="5dp"
            >
        <TextView
            android:id="@+id/tdsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest TDS Baseline"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/titillium_web"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/Heading"
            android:padding="5dp"

            android:layout_alignStart="@id/Heading"
            >
            <TextView
                android:id="@+id/tdsMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="month"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/titillium_web"
                />
            <TextView
                android:id="@+id/tdsPayable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="payble"
                android:fontFamily="@font/titillium_web"
                />
            <TextView
                android:id="@+id/tdsPaid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="paid"
                android:fontFamily="@font/titillium_web"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/row1"
          android:padding="5dp"
            android:layout_alignStart="@id/row1"
            >
            <TextView
                android:id="@+id/previousTDS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="preTDS"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/titillium_web"

                />
            <TextView
                android:id="@+id/currentTDS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="currentTDS"
                android:fontFamily="@font/titillium_web"

                />
            <TextView
                android:id="@+id/penalty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="penalty"
                android:fontFamily="@font/titillium_web"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tdsError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tdsView"
        app:layout_constraintBottom_toBottomOf="@id/tdsView"
        app:layout_constraintStart_toStartOf="@id/tdsView"
        app:layout_constraintEnd_toEndOf="@id/tdsView"
        android:visibility="gone"
        android:elevation="10dp"
        />
    <ProgressBar
        android:id="@+id/tdsProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintTop_toTopOf="@id/tdsView"
        app:layout_constraintBottom_toBottomOf="@id/tdsView"
        app:layout_constraintStart_toStartOf="@id/tdsView"
        app:layout_constraintEnd_toEndOf="@id/tdsView"
        android:elevation="10dp"
        />

    <RelativeLayout
        android:id="@+id/gstView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tdsView"
        app:layout_constraintTop_toBottomOf="@id/tdsView"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:id="@+id/Heading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:padding="5dp"
            >
        <TextView
            android:id="@+id/gstHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest GST Baseline"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/titillium_web"
            android:padding="5dp"
            android:textColor="#000000"

            />
      </LinearLayout>
        <LinearLayout
            android:id="@+id/gstRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/Heading2"
            android:padding="5dp"
            android:layout_alignStart="@id/Heading2"
            >
            <TextView
                android:id="@+id/gstMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="month"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/titillium_web"
                />
            <TextView
                android:id="@+id/payableGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="payble"
                android:fontFamily="@font/titillium_web"
                />
            <TextView
                android:id="@+id/paidGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="paid"
                android:fontFamily="@font/titillium_web"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/gstRow1"
            android:padding="5dp"
            android:layout_alignStart="@id/gstRow1"
            >
            <TextView
                android:id="@+id/previousGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="preGST"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/titillium_web"

                />
            <TextView
                android:id="@+id/currentGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CurrentGST"
                android:fontFamily="@font/titillium_web"

                />
            <TextView
                android:id="@+id/penaltyGST"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="penalty"
                android:fontFamily="@font/titillium_web"

                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/gstError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/gstView"
        app:layout_constraintBottom_toBottomOf="@id/gstView"
        app:layout_constraintStart_toStartOf="@id/gstView"
        app:layout_constraintEnd_toEndOf="@id/gstView"
        android:elevation="10dp"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/gstProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintTop_toTopOf="@id/gstView"
        app:layout_constraintBottom_toBottomOf="@id/gstView"
        app:layout_constraintStart_toStartOf="@id/gstView"
        app:layout_constraintEnd_toEndOf="@id/gstView"
        android:elevation="10dp"
        />
</android.support.constraint.ConstraintLayout>