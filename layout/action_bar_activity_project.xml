<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_project_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/viewActivityActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_card_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
        <LinearLayout
            android:id="@+id/actionAddExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:layout_gravity="center"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/addexpense"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\nExpense"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionShowActivityDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:layout_gravity="center"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_detail"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show\nExpenses"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionRemoveActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_remove"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove\nActivity"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewProjectActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/actionAddProjectExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_expense_green"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\nExpense"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/actionAddActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_activity_green"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\nActivity"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showMyExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_expense_green"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My\nExpense"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionProjectRemove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_remove_green"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove\nProject"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/viewPersonActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:id="@+id/actionAddPersonalExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\nExpense"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionShowPersonalExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/project"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show\nDetails"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>

</merge>