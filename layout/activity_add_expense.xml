<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".AddExpenseActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_below="@id/appBar"
        android:fillViewport="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/txtField1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:paddingLeft="30dp"
        android:textSize="18sp"
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/txtField2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtField1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:paddingLeft="30dp"
        android:textSize="15sp"
        android:textColor="@color/green"
        />
    <FrameLayout
        android:id="@+id/expenseTypeViewPager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/txtField2"
        app:layout_constraintStart_toStartOf="@id/txtField2"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_border"
        android:padding="10dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/expenseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="15"
        android:textSize="15dp"
        android:hint="Expense Type"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@+id/expenseTypeViewPager"
        app:layout_constraintStart_toStartOf="@id/expenseTypeViewPager"
        android:layout_margin="30dp"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/editAmount"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:ems="15"
        android:textSize="15dp"
        android:hint="Amount"
        android:inputType="number"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/expenseType"
        app:layout_constraintStart_toStartOf="@id/expenseType"
        />
    <EditText
        android:id="@+id/editRemarks"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:ems="15"
        android:textSize="15dp"
        android:hint="Remark"
        android:inputType="textLongMessage"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/editAmount"
        app:layout_constraintStart_toStartOf="@id/editAmount"
        />

    <TextView
        android:id="@+id/txtExpenseDate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editRemarks"
        app:layout_constraintStart_toStartOf="@id/editRemarks"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/txtExpenseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/txtExpenseDate"
        app:layout_constraintEnd_toEndOf="@id/editAmount"
        android:text="Change Time"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        />

<LinearLayout
    android:id="@+id/viewAttachment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/txtExpenseTime"
    app:layout_constraintStart_toStartOf="@id/editRemarks"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp"
    >
    <TextView
        android:id="@+id/txtAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:text="Take a picture of receipt"
        android:textColor="@color/gray"
        android:textSize="16sp"

        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_camera_alt_gray_24dp"
        app:layout_constraintRight_toRightOf="@id/txtAttachment"
        app:layout_constraintStart_toEndOf="@id/txtAttachment"
        android:onClick="AddAttachment"
        android:layout_marginLeft="30dp"
        />
</LinearLayout>
    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:maxWidth="350dp"
        app:layout_constraintTop_toBottomOf="@id/viewAttachment"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/white"
        android:onClick="SaveExpense"
        app:layout_constraintTop_toBottomOf="@id/imgPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/blue"
        />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>