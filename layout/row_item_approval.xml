<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:background="@drawable/background_card_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/viewForum"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/bg"
        >
        <net.anvisys.xpen.Object.OvalImageView
            android:id="@+id/imageUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user_image"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/gray"
            android:text="Deepa Mehta"
            android:layout_gravity="center"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="12sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row10"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/viewForum"
        app:layout_constraintTop_toTopOf="@+id/viewForum"
        android:layout_marginLeft="80dp"
        android:padding="5dp"
        android:background="@color/bg"
        >
        <TextView
            android:id="@+id/txtExpense"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="Rs. 1200.00"
            android:textSize="17sp"
            android:textColor="@color/red"/>
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="@drawable/round"
            android:backgroundTint="@color/lightgray"
            android:text="status"
          />
        <ImageView
            android:id="@+id/imgAction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:padding="0dp"
            android:src="@drawable/ic_action_overflow"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activityProj"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/row10"
        app:layout_constraintTop_toBottomOf="@+id/row10"
        android:background="@color/bg"
        android:layout_marginLeft="80dp"

        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageUser"
            android:layout_below="@id/txtUser"
            android:textSize="13sp"
            android:padding="5dp"
            android:textColor="#474747"
            android:text="Activity, "
            />
        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:text="project"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityProj"
        android:orientation="horizontal"
        android:background="@drawable/border_approval"

         >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:text="Expense"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/txtTotalExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/gray"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_approval"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/green"
                android:text="Advance"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/txtAdvance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/gray"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/green"
                android:text="Balance"
                android:layout_gravity="center_horizontal"
                />
        <TextView
            android:id="@+id/txtNetBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/viewForum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background_card"
        android:padding="10dp"
        android:visibility="gone"
        >
        <net.anvisys.xpen.Object.OvalImageView
            android:id="@+id/imageUser1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/user_image"
            />

        <TextView
            android:id="@+id/txtUser1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignTop="@id/imageUser1"
            android:layout_toRightOf="@id/imageUser1"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="Deepa Mehta, L234"
            />

        <TextView
            android:id="@+id/txtDateTime1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/txtUser1"
            android:text="6 min"
            android:textColor="#838383"
            />
        <TextView
            android:id="@+id/txtActivity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageUser1"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/txtUser1"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="Activity"
            />
        <LinearLayout
            android:id="@+id/viewAmount1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_alignLeft="@id/txtUser1"
            android:layout_below="@id/txtActivity1"

            >
            <TextView
                android:id="@+id/txtExpense1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="expence"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/txtAdvance1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Advance"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewStatus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/viewAmount1"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/txtUser1"

            >
            <TextView
                android:id="@+id/txtApprover1"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="manager"/>
            <TextView
                android:id="@+id/txtStatus1"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="status"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>