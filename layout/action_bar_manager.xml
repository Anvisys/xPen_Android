<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manager_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/action_bar_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/showTransaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:layout_gravity="center"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_transaction"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show\nTransaction"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionInvoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:layout_gravity="center"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_invoice"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show\nInvoice"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionAllProjectExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_expense"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All\nExpenses"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionPurchase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:onClick="OnAction"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_purchase"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show\nPurchase"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="10dp"
                />
        </LinearLayout>
    </LinearLayout>

</merge>