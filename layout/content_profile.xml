<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="160dp"
        android:background="@color/tab"
        android:layout_marginTop="56dp"
        >
        <net.anvisys.xpen.Object.OvalImageView
            android:id="@+id/profile_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user_image"
            android:onClick="EditImage"
            />

        <Button
            android:id="@+id/btnImageUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_image"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@id/profile_image"
            android:text="Upload"
            android:onClick="Image_Update"
            android:background="#10000000"
            android:padding="0dp"
            android:visibility="invisible"
            >
        </Button>

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/ImgProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintTop_toTopOf="@id/header"
        app:layout_constraintBottom_toBottomOf="@id/header"
        android:elevation="10dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ContentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ShowProfileContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amit Bansal"
                android:layout_marginLeft="15dp"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:editable="false"
                android:layout_marginTop="10dp"
                />

                    <TextView
                        android:id="@+id/txtRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:editable="false"
                        android:textColor="@color/gray"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15sp"
                        android:layout_marginTop="16dp"
                        android:text="amit_bansal73@yahoo.com"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        />

                    <TextView
                        android:id="@+id/txtmobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:text="9591033223"
                        android:textColor="@color/gray"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        />
                    <TextView
                        android:id="@+id/txtOrganization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="5dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:drawableLeft="@drawable/ic_group_black_24dp"
                        />
                    <TextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/EditProfileContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Amit Bansal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/editMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"

                    />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                />

            <TextView
                android:id="@+id/editOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_group_black_24dp"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/editLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txtupdateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                />
            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Update"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:onClick="UpdateProfile"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/editPasswordContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:inputType="textWebPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:editable="false"
                />
            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textWebPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:editable="false"
                />
            <EditText
                android:id="@+id/cnfPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textWebPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:editable="false"
                />
            <TextView
                android:id="@+id/txtPasswordMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                />
            <Button
                android:id="@+id/btnUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Update"
                android:background="@drawable/round"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:onClick="UpdatePassword"
                />
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txtEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/ContentArea"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/ContentArea"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:textColor="@color/blue"
        />

</android.support.constraint.ConstraintLayout>